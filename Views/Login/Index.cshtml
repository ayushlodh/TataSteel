@model TataSteel.Models.UserModel
<head>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<style type="text/css">
    body {
        text-align : center;
        background-image : url('https://www.google.com/imgres?imgurl=https%3A%2F%2Fwww.tata.com%2Fcontent%2Fdam%2Ftata%2Fimages%2Fnewsroom%2Fbusiness%2Fdesktop%2Fshikhar25_banner_desktop_1920x1080.jpg&imgrefurl=https%3A%2F%2Fwww.tata.com%2Fnewsroom%2Fbusiness%2Fforging-sustainable-change-tata-steel&tbnid=OoTXV7js7y-7EM&vet=12ahUKEwiB3qHj6ZD4AhWQx6ACHfWPBeEQMyglegUIARCZAg..i&docid=TS8PoOvyEzO7TM&w=1920&h=1080&q=tatasteel%20working&ved=2ahUKEwiB3qHj6ZD4AhWQx6ACHfWPBeEQMyglegUIARCZAg');
        background-size : cover;
    }
    h4 {
        text-align : center;
        padding : 10px 20px 10px 20px;
        color : dodgerblue;
    }
    .sec {
        width : 70%;
        margin : 10px auto 25px auto;
        background-color : cyan;
        border : 5px solid black;
        border-radius : 25px;
        box-shadow : 10px 10px;
    }
    .space {
        padding : 10px 0 10px 0;
    }
    .space2 {
        padding : 0 0 8px 0;
    }
    .btnspace {
        margin-bottom : 13px;
    }
    .outer {
        width : 90%;
        margin : 5px auto 5px auto;
        border : 3px solid black;
        border-radius : 25px;
    }
</style>
<body>
    <div class="outer">
        <h4>Please fill in your details</h4>
        <hr />
        <div class="row">
            <div class="col-md-4 sec">
                <form asp-action="Index">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group space">
                        <label asp-for="Id" class="control-label space2"></label>
                        <input asp-for="Id" class="form-control" type="text" required/>
                        <span asp-validation-for="Id" class="text-danger"></span>
                    </div>
                    <div class="form-group space">
                        <label asp-for="UserName" class="control-label space2"></label>
                        <input asp-for="UserName" class="form-control" type="text" required/>
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>
                    <div class="form-group space">
                        <label asp-for="Email" class="control-label space2"></label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group space">
                        <label asp-for="Contact" class="control-label space2"></label>
                        <input asp-for="Contact" class="form-control" />
                        <span asp-validation-for="Contact" class="text-danger"></span>
                    </div>
                    <div class="form-group space">
                        <label asp-for="Department" class="control-label space2"></label>
                        <input asp-for="Department" class="form-control" type="text" required/>
                        <span asp-validation-for="Department" class="text-danger"></span>
                    </div>
                    <div class="form-group space">
                        <label asp-for="Role" class="control-label space2"></label><br />
                        <select name="Role" id="Role">
                            <option value="1">1. Job Requester</option>
                            <option value="2">2. Job Request Approver</option>
                            <option value="3">3. Administrator</option>
                        </select>
                        <span asp-validation-for="Role" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary btnspace" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
